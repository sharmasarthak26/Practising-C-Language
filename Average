#include<stdio.h>
#include<conio.h>
main()
{
      int n,c;
      float a,sum=0;
      printf("enter a number\n");
      scanf("%d",&n);
      for(c=1;c<=n;c++)
      {
          sum=sum+c;
            printf("%d+",c);
      }
     a=sum/(n+1);
     printf("=%f\n",sum);
     printf("average=%f",a);
     getch();
}
